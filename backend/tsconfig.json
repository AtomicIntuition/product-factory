{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "rootDir": "..",
    "baseUrl": "..",
    "noEmit": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "../src/lib/**/*.ts",
    "../src/types/**/*.ts",
    "../src/config/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
